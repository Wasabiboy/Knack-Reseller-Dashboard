{
  "manifest_version": 3,
  "name": "Knack Reseller Dashboard",
  "description": "Adds tiered pricing, record counts, costs per client, usage analytics, profit margins, and configurable pricing to Knack apps",
  "version": "0.3.0",
  "action": {
    "default_title": "Knack Reseller Dashboard",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://dashboard.knack.com/apps*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "author": "Phil@wasabi.digital",
  "content_scripts": [
    {
      "matches": [
        "https://dashboard.knack.com/apps*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html"
}